{% extends 'base.html.twig' %}

{% block title %}
  Hello DetailsController!
{% endblock %}

{% block body %}
  {% include 'navbar/navbar.html.twig' %}
  <div class="flex-details">
    <div class="card card-details" style="width: 18rem;">
      <div class="img-details">
        <img src="{{ asset('assets/images/' ~ animalChoisit.image) }}" class="card-img-top" alt="{{ animalChoisit.nom }}" />
      </div>
      <div class="card-body">
        <h5 class="card-title">
          {{ animalChoisit.nom }}
          {% if animalChoisit.sexe == 'Male' %}
            <i class="fa-solid fa-mars" style="color: #070855;"></i>
          {% else %}
            <i class="fa-solid fa-venus" style="color: #F8C8DC;"></i>
          {% endif %}, {{ animalChoisit.age }} ans
        </h5>
        <p class="card-text">
          {{ animalChoisit.description }} <br /><br /> Taille: {{ animalChoisit.taille }} cm <br /> Poids: {{ animalChoisit.poids }}{% if animalChoisit.espece == 'rongeur' or animalChoisit.espece == 'oiseau' %}
            g
          {% else %}
            Kg
          {% endif %}
        </p>
        <p>
          <span class="demande">{{ demandes }}</span> dossier envoy√© pour adopter <span class="demande">{{ animalChoisit.nom }}</span>
        </p>
        <a href="{{ path('app_adopte', { id: animalChoisit.id }) }}" class="btn btn-primary">Envie d'adopter {{ animalChoisit.nom }}?</a>
      </div>
    </div>
  </div>
{% endblock %}
